<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dialog_input"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <TextView
        android:id="@+id/fragment_dialog_input_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hostip" />

    <EditText
        android:id="@+id/fragment_dialog_input_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_dialog_input_textview"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:hint="@string/hostip"
        android:digits="0123456789."
        android:inputType="number|text" />

    <TextView
        android:id="@+id/fragment_dialog_input_ok"
        style="@style/button_red_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_dialog_input_input"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:scrollbars="none"
        android:text="@android:string/ok" >
    </TextView>

</RelativeLayout>